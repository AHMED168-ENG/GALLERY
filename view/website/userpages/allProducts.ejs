                url : "/add-to-favorit-cart?_csrf=" + '<%= csrf %>',
                method:"post",
                data : {
                    userId : '<%= userData ? userData.id : 0 %>',
                    productId, 
                },
                success(data) {
                    if(data.status) {
                        if(ele.classList.contains("active")){
                            UserFavorit.innerHTML = +UserFavorit.innerHTML + 1
                        } else {
                            UserFavorit.innerHTML = +UserFavorit.innerHTML - 1
                        }
                        Swal.fire({
                            icon: 'success',
                            title:data.message,
                            showConfirmButton: false,
                            timer: 2500
                        })
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title:data.message,
                            showConfirmButton: false,
                            timer: 2500
                        })                    
                    }
                },
                error(error){
                    Swal.fire({
                            icon: 'error',
                            title:"505 error",
                            showConfirmButton: false,
                            timer: 2500
                        })                
                    }
            })
        }
    })
   
</script>
</body>
    