<%- include("../inclueds/head")  %>
</head>
<body>
<%- include("../inclueds/upperNavbare")  %> 
<%- include("../inclueds/lowerNavbare")  %> 
<!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||| -->

    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="/home">Home</a>
                    <a class="breadcrumb-item text-dark" href="/all-products">Shop</a>
                    <span class="breadcrumb-item active">favorit Cart</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Cart Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive mb-5">
                <% if (allFavoritProducts.length > 0) { %>
                   <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Real Price</th>
                            <th>Descount</th>
                            <th>Shipping</th>
                            <th>Structure</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <% allFavoritProducts.forEach((element, index) => { %>
                        <tr id="<%= element.favoritProduct.id %>">
                            <td class="text-left"><img src="/assets/dashboard/Products/<%= element.favoritProduct.productImage.split("--")[0] %>" alt="" style="width: 50px;"> <a style="color:#222" href="/product-Details/<%= element.favoritProduct["slug_" + lang] %>"><%= element.favoritProduct["productName_" + lang] %></a></td>
                            <td class="align-middle"><%= element.favoritProduct.price %>Eg</td>
                            <td class="align-middle"><%= element.favoritProduct.descount %>%</td>
                            <td class="align-middle"><%= element.favoritProduct.shipping %>Eg</td>
                            <td class="align-middle"><%= element.favoritProduct.structure %>Eg</td>
                            <td class="align-middle d-flex"> 
                                <a data_attr="<%= element.favoritProduct.id %>" title="add to shoping cart" class="btn btn-outline-dark btn-square addUserCart mx-2 <%= shopingCart.includes(element.favoritProduct.id) ? "active" : ""%>" href=""><i class="fa fa-shopping-cart"></i></a>
                                <a   data_attr="<%= element.favoritProduct.id %>" title="remove from favorit cart" class="btn btn-outline-dark btn-square addToFavorit active" href=""><i class="far fa-heart"></i></a></td>
                        </tr>
                        <% }) %>

                    </tbody>
                </table>
                <div class="pagination row px-xl-5">
                    <div class="col-md-4">
                            <div class="dataTables_info">Showing <%=  (curantPage - 1) * elements %> to <%=  ((curantPage - 1) * elements) + elements %> of <%= allElementCount %> entries</div>
                    </div>
                    <div class="col-md-4 dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
                            <% if ((hasPrevious || hasNext)) { %>
                            <ul style="margin:0 ;justify-content: center;" class=" pagination">
                                <% if (curantPage != 1) { %>
                                <li id="DataTables_Table_0_previous" class="paginate_button page-item previous"><a class="page-link" href="?page=<%= curantPage - 1 %>">Previous</a></li>
                                <% } %>
                                <% if (curantPage != 1 &&  curantPage - 1 != 1) { %> 
                                    <li id="" class="paginate_button page-item "><a class="page-link" href="?page=<%= 1 %>">1</a></li>
                                <% } %>
                                <% if (hasPrevious) { %>
                                    <li class="paginate_button page-item "><a class="page-link" href="?page=<%= curantPage - 1 %>"><%= curantPage - 1 %></a></li>
                                <% } %>
                                <li id="" class="paginate_button page-item active"><a class="page-link" href="?page=<%= curantPage %>"><%= curantPage %></a></li>
                                <% if (hasNext) { %>
                                <li id="" class="paginate_button page-item "><a class="page-link" href="?page=<%= curantPage + 1 %>"><%= curantPage + 1 %></a></li>
                                <% } %>
                                <% if (curantPage !=  lastPage &&  curantPage + 1 != lastPage) { %>
                                <li id="" class="paginate_button page-item "><a class="page-link" href="?page=<%= lastPage %>"><%= lastPage %></a></li>
                                <% } %>
                                <% if (curantPage != lastPage) { %>
                                <li id="DataTables_Table_0_next" class="paginate_button page-item next"><a class="page-link" href="?page=<%= curantPage + 1 %>">Next</a></li>  
                                <% } %>

                            </ul>
                            <%}%>
                    </div>
                </div>
                <% } else { %>
                    <div class="alert alert-danger">No Product Hir In Favorit Cart</div>
                <% } %>
              
            </div>

        </div>
    </div>
    <!-- Cart End -->


<%- include("../inclueds/footer")  %>
<%- include("../inclueds/footer_script")  %>
<script src="/public/website/js/sweetalert.min.js"></script>
<script>
    const addToFavorit = document.querySelectorAll(".addToFavorit")
    const UserFavorit = document.querySelector(".UserFavorit")
    const UserCart = document.querySelector(".UserCart")
    const addUserCart = document.querySelectorAll(".addUserCart")
    addUserCart.forEach(ele => {
        ele.onclick = (e) => {
            e.preventDefault()
            const productId = ele.getAttribute("data_attr")
            ele.classList.toggle("active")
                $.ajax({
                url : "/add-to-shoping-cart?_csrf=" + '<%= csrf %>',
                method:"post",
                data : {
                    userId : '<%= userData ? userData.id : 0 %>',
                    productId,
                    count:1,
                },
                success(data) {
                    if(data.status) {
                        if(ele.classList.contains("active")){
                            UserCart.innerHTML = +UserCart.innerHTML + 1
                        } else {
                            UserCart.innerHTML = +UserCart.innerHTML - 1
                        }
                        Swal.fire({
                            icon: 'success',
                            title:data.message,
                            showConfirmButton: false,
                            timer: 2500
                        })
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title:data.message,
                            showConfirmButton: false,
                            timer: 2500
                        })                    
                    }
                },
                error(error){
                    Swal.fire({
                            icon: 'error',
                            title:"505 error",
                            showConfirmButton: false,
                            timer: 2500
                        })                
                    }
            })
        }
    })
    
    addToFavorit.forEach((ele ,index) => {
        ele.onclick = (e) => {
            e.preventDefault()       
            const productId = ele.getAttribute("data_attr")
            ele.classList.toggle("active")
                $.ajax({
                url : "/add-to-favorit-cart?_csrf=" + '<%= csrf %>',
                method:"post",
                data : {
                    userId : '<%= userData ? userData.id : 0 %>',
                    productId, 
                },
                success(data) {
                    if(data.status) {
                        if(ele.classList.contains("active")){
                            UserFavorit.innerHTML = +UserFavorit.innerHTML + 1
                        } else {
                            UserFavorit.innerHTML = +UserFavorit.innerHTML - 1
                        }
                        document.getElementById(productId).remove()
                        Swal.fire({
                            icon: 'success',
                            title:data.message,
                            showConfirmButton: false,
                            timer: 2500
                        })
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title:data.message,
                            showConfirmButton: false,
                            timer: 2500
                        })                    
                    }
                },
                error(error){
                    Swal.fire({
                            icon: 'error',
                            title:"505 error",
                            showConfirmButton: false,
                            timer: 2500
                        })                
                    }
            })
        }
    })
   
</script>
</body>
    