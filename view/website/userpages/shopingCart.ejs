                    <div class="alert alert-danger">Your Cart will Be Empty After <%= TIME_OF_PRODUCT_IN_CART %> houre</div>
                </div>            
            <% } %>      
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Cart Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class=" <%= allShopingProducts.length > 0 ? "col-lg-9" : "col-lg-12" %> table-responsive mb-5">
                <% if (allShopingProducts.length > 0) { %>
                   <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Real Price</th>
                            <th>quantity</th>
                            <th>Descount</th>
                            <th>Shipping</th>
                            <th>Structure</th>
                            <th>action</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <% allShopingProducts.forEach((element, index) => { %>
                        <tr id="<%= element.cartProduct.id %>">
                            <td class="text-left"><img src="/assets/dashboard/Products/<%= element.cartProduct.productImage.split("--")[0] %>" alt="" style="width: 50px;"> <a style="color:#222" href="/product-Details/<%= element.cartProduct["slug_" + lang] %>"><%= element.cartProduct["productName_" + lang] %></a></td>
                            <td class="align-middle"><%= element.cartProduct.price * element.count %>Eg</td>
                            <td class="align-middle">
                                <div class="input-group mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button style="height:100%" onclick="changeCountByButton('<%= element.cartProduct.id %>','minus')"  class="btn btn-sm btn-primary btn-minus" >
                                        <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input style="padding:0 !important" oninput="changeCountByInput(event ,'<%= element.cartProduct.id %>')" min="1" data_attr="<%= element.cartProduct.id %>" type="number" class="form-control form-control-sm bg-secondary border-0 text-center" value="<%= element.count %>">
                                    <div class="input-group-btn">
                                        <button style="height:100%" onclick="changeCountByButton('<%= element.cartProduct.id %>','plus')" data_type="plus" class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle"><%= element.cartProduct.descount %>%</td>
                            <td class="align-middle"><%= element.cartProduct.shipping %>Eg</td>
                            <td class="align-middle"><%= element.cartProduct.structure * element.count %>Eg</td>
                            <td class="align-middle d-flex"> 
                                <a id="<%= element.cartProduct.id %>" data_attr="<%= element.cartProduct.id %>" title="remove from shoping cart" class="btn btn-outline-dark btn-square addUserCart mx-2 active" href=""><i class="fa fa-shopping-cart"></i></a>
                            </td>
                        </tr>
                        <% }) %>

                    </tbody>
                </table>
                <div class="pagination row px-xl-5">
                    <div class="col-md-4">
                            <div class="dataTables_info">Showing <%=  (curantPage - 1) * elements %> to <%=  ((curantPage - 1) * elements) + elements %> of <%= allElementCount %> entries</div>
                    </div>
                    <div class="col-md-4 dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
                            <% if ((hasPrevious || hasNext)) { %>
                            <ul style="margin:0 ;justify-content: center;" class=" pagination">
                                <% if (curantPage != 1) { %>
                                <li id="DataTables_Table_0_previous" class="paginate_button page-item previous"><a class="page-link" href="?page=<%= curantPage - 1 %>">Previous</a></li>
                                <% } %>
                                <% if (curantPage != 1 &&  curantPage - 1 != 1) { %> 
                                    <li id="" class="paginate_button page-item "><a class="page-link" href="?page=<%= 1 %>">1</a></li>
                                <% } %>
                                <% if (hasPrevious) { %>
                                    <li class="paginate_button page-item "><a class="page-link" href="?page=<%= curantPage - 1 %>"><%= curantPage - 1 %></a></li>
                                <% } %>
                                <li id="" class="paginate_button page-item active"><a class="page-link" href="?page=<%= curantPage %>"><%= curantPage %></a></li>
                                <% if (hasNext) { %>
                                <li id="" class="paginate_button page-item "><a class="page-link" href="?page=<%= curantPage + 1 %>"><%= curantPage + 1 %></a></li>
                                <% } %>
                                <% if (curantPage !=  lastPage &&  curantPage + 1 != lastPage) { %>
                                <li id="" class="paginate_button page-item "><a class="page-link" href="?page=<%= lastPage %>"><%= lastPage %></a></li>
                                <% } %>
                                <% if (curantPage != lastPage) { %>
                                <li id="DataTables_Table_0_next" class="paginate_button page-item next"><a class="page-link" href="?page=<%= curantPage + 1 %>">Next</a></li>  
                                <% } %>

                            </ul>
                            <%}%>
                    </div>
                </div>
                <% } else { %>
                    <div class="alert alert-danger">No Product Hir In shoping Cart</div>
                <% } %>
              
            </div>
            <% if (allShopingProducts.length > 0) { %>
                <div class="col-lg-3">
                    <!-- <form class="mb-30" action="">
                        <div class="input-group">
                            <input type="text" class="form-control border-0 p-4" placeholder="Coupon Code">
                            <div class="input-group-append">
                                <button class="btn btn-primary">Apply Coupon</button>
                            </div>
                        </div>
                    </form> -->
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
                    <div class="bg-light p-30 mb-5">
                        <div class="border-bottom pb-2">
                            <div class="d-flex justify-content-between ">
                                <h6> before descount</h6>
                                <h6><%= Math.round(totalOfAll.price) %>Eg</h6>
                            </div>
                            <div class="d-flex justify-content-between ">
                                <h6> After descount</h6>
                                <h6><%= Math.round(totalOfAll.afterDescount) %>Eg</h6>
                            </div>
                            <div class="d-flex justify-content-between">
                                <h6 class="font-weight-medium">total Shipping</h6>
                                <h6 class="font-weight-medium"><%= Math.round(totalOfAll.shipping) %>Eg</h6>
                            </div>
                            <div class="d-flex justify-content-between">
                                <h6 class="font-weight-medium">total structure</h6>
                                <h6 class="font-weight-medium"><%= Math.round(totalOfAll.structure) %>Eg</h6>
                            </div>
                        </div>
                        <div class="pt-2">
                            <div class="d-flex justify-content-between mt-2">
                                <h5>Total</h5>
                                <h5><%= Math.round(totalOfAll.totalPrice) %> Eg</h5>
                            </div>
                            <a href="/mack-order" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Complate process</a>
                        </div>
                    </div>
                </div>            
            <% } %>
        </div>
    </div>
    <!-- Cart End -->


