<%- include("../includes/head.ejs") %>

</head>
<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar"
data-open="click" data-menu="vertical-menu" data-col="2-columns">
    <%- include("../includes/navebar.ejs") %>
    <%- include("../includes/aside.ejs") %>

    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-6 col-12 mb-2">
                    <div class="row breadcrumbs-top">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/dashboard">main </a>
                                </li>
                                <li class="breadcrumb-item"><a href="/dashboard/testmonials"> testmonials </a>
                                </li>
                               
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- Basic form layout section start -->
                <section id="basic-form-layouts">
                    <div class="row match-height">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title" id="basic-layout-form"> show testmonial</h4>
                                    <a class="heading-elements-toggle"><i
                                            class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <%- include("../includes/notification") %> 
                                <div class="card-content collapse show">
                                    <div class="card-body">
                                        <form enctype="application/x-www-form-urlencoded" method="post" action="?_csrf=<%= csrf %>" class="form"  >
                                            <div class="form-body main">
                                                <h4 class="form-section"><i class="ft-home"></i>testmonial</h4>

                                                <div class="row main">
                                                    <div class="col-md-12">
                                                        <div class="row form-group justify-content-center">
                                                            <div class="image col-md-3 ">
                                                                <img style="width:100%;aspect-ratio:1/1" src="/assets/dashboard/Users/<%= testmonial.testmonialsUser.image.split("--")[0] %>" alt="">
                                                            </div>
                                                        </div>  
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> testmonial in english</label>
                                                            <textarea  type="text" class="form-control"  name="testmonial_en"><%= testmonial.testmonial_en  %></textarea>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> testmonial in arabic</label>
                                                            <textarea  type="text" class="form-control"  name="testmonial_ar"><%= testmonial.testmonial_ar  %></textarea>
                                                        </div>
                                                    </div>



                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> user name</label>
                                                            <input  type="text"  value="<%= testmonial.testmonialsUser.fName + " " + testmonial.testmonialsUser.lName  %>" class="form-control" >
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> user mobile</label>
                                                            <input  type="text" value="<%= testmonial.testmonialsUser.mobile %>" class="form-control" >
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> user rate</label>
                                                            <input  type="text" name="rate" value="<%= testmonial.rate  %>" class="form-control" >
                                                        </div>
                                                    </div>
     
                                                    
                                                    <div class="col-md-4">
                                                        <div class="form-group mt-1">
                                                            <input type="checkbox" name="active"
                                                                id="switch1"
                                                                value="1"
                                                                class="switch "
                                                                <%= testmonial.active ? "checked" : "" %>
                                                                />
                                                            <label
                                                                class="card-title ml-1" for="switch1">state </label>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary col-12">
                                                <i class="la la-check-square-o"></i> save
                                            </button>
                                           
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- // Basic form layout section end -->
            </div>
        </div>
    </div>

    <%- include("../includes/footer") %> 
    <%- include("../includes/footerScript") %> 
</body>
</html>
