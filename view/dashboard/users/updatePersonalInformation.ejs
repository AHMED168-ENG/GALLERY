<%- include("../includes/head.ejs") %>
    <style>
        .pairantImage {
            position:relative
        }
        .userImage {
            position:absolute;
            width:150px;
            height:150px;
            transform: translate(-50%,-50%);
            left:50%;
            top:calc(-50% - 80px);
            z-index: 20;
            padding:5px;
            border:1px solid #ddd;
            cursor: pointer;  
            overflow: hidden;
            background:#eee;
            border-radius: 50%;
        }
        .userImage img {
            width:100%;
            height:100%;
            object-fit: cover;
            opacity: 0.8;
            border-radius: 50%;
        }
        .userImage input {
            width: 100%;
            height:100%;
            position: absolute;
            top:0;
            left:0;
        }
        html body .content .content-wrapper {
            padding:60px 2.2rem 2.2rem !important
        }
    </style>
</head>
<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar"
data-open="click" data-menu="vertical-menu" data-col="2-columns">
    <%- include("../includes/navebar.ejs") %>
    <%- include("../includes/aside.ejs") %>

    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-6 col-12 mb-2">
                    <div class="row breadcrumbs-top">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/dashboard">main </a>
                                </li>
                                </li>
                                <li class="breadcrumb-item active">edit my information
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
                                                    
            <div class="content-body">
                <!-- Basic form layout section start -->
                <section id="basic-form-layouts">
                    <div class="row match-height">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title" id="basic-layout-form"> edit my information</h4>
                                    <a class="heading-elements-toggle"><i
                                            class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <%- include("../includes/notification") %> 
                                <div class="card-content collapse show">
                                    <div class="card-body">
                                        <form enctype="multipart/form-data" method="post" action="?_csrf=<%= csrf %>" class="form"  >
                                            <div class="form-body main">

                                                <div class="row main">
                                                    <div class="col-md-12 pairantImage">
                                                        <div class=" userImage">
                                                            <img src="/assets/dashboard/Users/<%= userData.image.split("--")[0] %>" alt="">
                                                                <input type="hidden" value="<%=  userData.image %>" name="oldImage" >
                                                                <input type="file" name="image" class="custom-file-input">                                                        </div>
                                                        <% if (validationError.image) { %>
                                                            <span class="text-danger"><%=validationError.image[0].msg %></span>
                                                        <% } %>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> first name</label>
                                                            <input type="text" value="<%= bodyData ? bodyData.fName : userData.fName %>" class="form-control" placeholder="enter first name" name="fName">
                                                                <% if (validationError.fName) { %>
                                                                    <span class="text-danger"><%=validationError.fName[0].msg %></span>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> last name</label>
                                                            <input type="text" value="<%= bodyData ? bodyData.lName : userData.lName %>" class="form-control" placeholder="enter last name" name="lName">
                                                                <% if (validationError.lName) { %>
                                                                    <span class="text-danger"><%=validationError.lName[0].msg %></span>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> age </label>
                                                            <input type="number"  value="<%= bodyData ? bodyData.age : userData.age %>" class="form-control" placeholder="enter age" name="age">
                                                                <% if (validationError.age) { %>
                                                                    <span class="text-danger"><%=validationError.age[0].msg %></span>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> email </label>
                                                            <input type="text" value="<%= bodyData ? bodyData.email : userData.email%>" class="form-control" placeholder="enter your email" name="email">
                                                                <% if (validationError.email) { %>
                                                                    <span class="text-danger"><%=validationError.email[0].msg %></span>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> password if you wont to change</label>
                                                                <input type="hidden" value="<%= userData.password %>" name="oldPassword" >
                                                            <input type="password" class="form-control" placeholder="enter password if you wont to change" value="<%= bodyData ? bodyData.password : "" %>" name="password" >
                                                                <% if (validationError.password) { %>
                                                                    <span class="text-danger"><%=validationError.password[0].msg %></span>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> password again</label>
                                                            <input type="password" value="<%= bodyData ? bodyData.confirmPassword : "" %>" class="form-control" placeholder="enter password again" name="confirmPassword">
                                                                <% if (validationError.confirmPassword) { %>
                                                                    <span class="text-danger"><%=validationError.confirmPassword[0].msg %></span>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> address </label>
                                                            <input type="text" value="<%= bodyData ? bodyData.address : userData.address  %>"  class="form-control" placeholder="enter address" name="address">
                                                                <% if (validationError.address) { %>
                                                                    <span class="text-danger"><%=validationError.address[0].msg %></span>
                                                                <% } %>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="projectinput1"> mobile </label>
                                                            <input type="number" value="<%= bodyData ? bodyData.mobile : userData.mobile %>" class="form-control" placeholder="enter your mobile" name="mobile">
                                                                <% if (validationError.mobile) { %>
                                                                    <span class="text-danger"><%=validationError.mobile[0].msg %></span>
                                                                <% } %>
                                                        </div>
                                                    </div>
          
                                                </div>
                                            </div>
                                          

                                            <button type="submit" class="btn btn-primary col-12">
                                                <i class="la la-check-square-o"></i> save
                                            </button>
                                            
                                        </form>

                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- // Basic form layout section end -->
            </div>
        </div>
    </div>

    <%- include("../includes/footer") %> 
    <%- include("../includes/footerScript") %> 

</body>
</html>
